{
    "languageserver": {
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": [
                "elm"
            ],
            "rootPatterns": [
                "elm.json"
            ],
            "initializationOptions": {
                "elmPath": "elm",
                "elmFormatPath": "elm-format",
                "elmTestPath": "elm-test",
                "elmAnalyseTrigger": "change"
            }
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "cuda",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".git/",
                ".hg/"
            ]
        },
        "go": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "trace.server": "verbose",
            "filetypes": [
                "go"
            ]
        }
    }
}
